<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%- include('./partials/head.ejs') %>

<body>

   <!-- nav -->
   <%- include('./partials/nav.ejs') %>

   <div class="blogs content">
      <h2>All blogs</h2> 

      <!-- loop thru blogs arr-->
      <% if (blogs.length > 0) { %>
         
         <% blogs.forEach(blog => { %>
            <a class="singleBlog" href="/blogs/<%= blog._id %>">
               <h3 class="title"><%= blog.title %></h3>
               <p class="snippet"><%= blog.snippet %></p>
               <p class="body"><%= blog.body %></p>
            </a>
         <% }) %>
         
      <% } else { %>
         <h3>No blogs</h3>
      <% } %>

   </div>
   
</body>
</html>